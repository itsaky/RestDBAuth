<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itsaky.auth" >

    <!--<uses-permission android:name="android.permission.INTERNET" />
	-->
		<uses-permission android:name="android.permission.INTERNET"/>
	<application
		android:name=".AIDEApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Login"
        android:theme="@style/MyTheme"
		android:resizeableActivity = "true">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DebugActivity"/>
	
	<activity android:name=".MainActivity" android:screenOrientation="portrait" android:label="@string/app_name" />
	<activity android:name=".SignupActivity" android:screenOrientation="portrait" android:label="Sign Up" /></application>

</manifest>
